<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".details.views.DetailsActivity">
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Detalle del producto"
                app:titleTextColor="@color/colorAccent"
                >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="?attr/actionBarSize">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:id="@+id/imageDetailHeader"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:transitionName="transitionHeader"
                            android:src="@drawable/img_placeholder"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:paddingHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/txtDetailTitle"
                                android:text="Titulo"
                                android:layout_marginBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:transitionName="transitionTitle"
                                android:textColor="@color/colorProductTitle"/>
                        <TextView
                                android:id="@+id/txtDetailPrice"
                                android:text="$2.000"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorProductPrice"
                                android:transitionName="transitionPrice"
                                android:textSize="28sp"/>
                        <LinearLayout
                                android:id="@+id/detailDiscountLayout"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent">
                            <TextView
                                    android:id="@+id/txtDetailOldPrice"
                                    android:layout_marginRight="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$2.000"
                                    android:transitionName="transitionOldPrice"
                                    android:textColor="@color/colorProductOldPrice"/>
                            <TextView
                                    android:id="@+id/txtDetailDiscount"
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:transitionName="transitionDiscount"
                                    android:textColor="@color/colorProductDiscount"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/detailTagLayout"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>