<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/imageHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:transitionName="transitionHeader"
            android:src="@drawable/img_placeholder"/>
    <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txtTitle"
                android:text="Titulo"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="transitionTitle"
                android:textColor="@color/colorProductTitle"/>
        <TextView
                android:id="@+id/txtPrice"
                android:text="$2.000"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="transitionPrice"
                android:textColor="@color/colorProductPrice"
                android:textSize="28sp"/>
        <LinearLayout
                android:id="@+id/discountLayout"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <TextView
                    android:id="@+id/txtOldPrice"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2.000"
                    android:transitionName="transitionOldPrice"
                    android:textColor="@color/colorProductOldPrice"/>
            <TextView
                    android:id="@+id/txtDiscount"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%"
                    android:transitionName="transitionDiscount"
                    android:textColor="@color/colorProductDiscount"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/tagLayout"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>